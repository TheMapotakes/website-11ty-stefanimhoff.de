---
layout: sketchnotes-detail
pagination:
  data: sketchnotes
  size: 1
  alias: sketchnote
permalink: "/sketchnotes/{{ sketchnote.title | slug }}/"
eleventyComputed:
  title: "{{ sketchnote.title }}"
---


{% set nextPost = pagination.page.next %}
{% set previousPost = pagination.page.previous %}

<figure class="sketchnotes-detail {{ sketchnote.format }} {% if sketchnote.description %}sketchnote--has-caption{% endif %}">
  <div class="image-shadow">
    <img class="sketchnotes-detail-image" src="{{ sketchnote.image }}" alt="{{ sketchnote.title }}">
  </div>
  {% if sketchnote.description %}
    <figcaption class="sketchnotes-detail-caption">
      {{ sketchnote.description | safe }}
    </figcaption>
  {% endif %}
</figure>

{% if previousPost %}
  <a 
    href="/sketchnotes/{{ previousPost.title | slug }}/" 
    class="pagination pagination-start" 
    aria-label="{{ previousPost.title }}" 
    title="{{ previousPost.title }}"
  >
    {% include "pagination-left-arrow.njk" %}
  </a>
{% endif %}

{% if nextPost %}
  <a 
    href="/sketchnotes/{{ nextPost.title | slug }}/" 
    class="pagination pagination-end" 
    aria-label="{{ nextPost.title }}" 
    title="{{ nextPost.title }}"
  >
    {% include "pagination-right-arrow.njk" %}
  </a>
{% endif %}

